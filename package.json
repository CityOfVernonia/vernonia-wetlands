{
  "name": "vernonia-wetlands",
  "version": "1.0.0",
  "scripts": {
    "build": "vite build",
    "dev": "vite",
    "lint": "eslint . --ext .js,.ts,.tsx",
    "postinstall": "node ./scripts/sass-replace.js && node ./scripts/copy-assets.js",
    "prettier": "prettier --write \"src/**/*.ts?(x)\" && prettier --write \"src/**/*.js\"",
    "serve": "vite preview",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CityOfVernonia/vernonia-wetlands.git"
  },
  "author": "COV-GIS",
  "license": "MIT",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.1.0",
    "@typescript-eslint/parser": "^5.1.0",
    "ansi-regex": ">=6.0.1",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "fs-extra": "^10.0.0",
    "prettier": "^2.4.1",
    "replace-in-file": "^6.3.1",
    "sass": "^1.43.2",
    "tslib": "^2.3.1",
    "typescript": "^4.4.4",
    "vite": "^2.6.10"
  },
  "dependencies": {
    "@arcgis/core": "^4.21.2",
    "@esri/calcite-components": "^1.0.0-beta.67",
    "@vernonia/assessor-urls": "^1.0.2",
    "@vernonia/core": "^1.0.50"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "node": true
    },
    "parser": "@typescript-eslint/parser",
    "ignorePatterns": [
      "package.json",
      "package-lock.json",
      "node_modules/**",
      "scripts/**",
      "src/public/**",
      "vite.config.js"
    ],
    "rules": {
      "no-console": 0,
      "@typescript-eslint/no-explicit-any": 0,
      "@typescript-eslint/ban-ts-comment": 1
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:prettier/recommended"
    ],
    "plugins": [
      "@typescript-eslint"
    ]
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "trailingComma": "all",
    "printWidth": 120,
    "tabWidth": 2
  }
}
